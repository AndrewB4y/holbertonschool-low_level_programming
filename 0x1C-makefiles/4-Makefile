CC	:= gcc
SRC	:= main.c holberton.c
OBJ	:= main.o holberton.o
NAME	:= holberton
RM	:= rm
CFLAGS	:= -Wall -Werror -Wextra -pedantic

.PHONY : all clean oclean fclean re

all : $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o holberton
$(OBJ) : m.h

clean :
	$(RM) -f *~ $(NAME)

oclean :
	$(RM) -f $(OBJ)

fclean : clean oclean

re :
	$(CC) $(CFLAGS) -c $(SRC)
